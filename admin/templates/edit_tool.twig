<!DOCTYPE html>
<html lang="en">
    {% include 'header.twig' %}
<body>
    {% if successMessage %}
    <form>
        <div class="alert alert-success">
            {{ successMessage }}
            <br><br>
            <button type="button" class="btn btn-primary" onclick="window.location.href='admin_dashboard.php'">Go Back</button>
        </div>
    </form>
    {% else %}
        <form action="edit_tool.php" method="post">
            <input type="hidden" name="id" value="{{ tool.id }}">
        
                      
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" maxlength="100" value="{{ tool.name }}" required><br><br>
                
                <label for="supplier">Supplier:</label><br>
                <center>
                <select id="suppliers" name="supp_id" class="full-width" required>
                    {% for supplier in suppliers %}
                        <option value="{{ supplier.supp_id }}" {% if tool.supp_id == supplier.supp_id %}selected{% endif %}>{{ supplier.supp_name }}</option>
                    {% endfor %}
                </select><br><br>
                </center>
                
                <label for="price">Price:</label><br>
                <input type="number" id="price" name="price" step="0.01" value="{{ tool.price }}" required><br><br>
            
                <center>
                <label for="dop">Date of Purchase:</label><br>
                <input type="date" id="dop" name="dop" value="{{ tool.dop }}" required><br><br>
                </center>
            
                <label for="quantity">Quantity:</label><br>
                <input type="number" id="quantity" name="quantity" maxlength="10" value="{{ tool.quantity }}" required><br><br>
            
                <center>
                    <label for="image">Image:</label>
                    <input type="file" id="image" name="image" accept="image/*" {% if image_required %}required{% endif %}><br><br>
                    </center>
                
                <label for="description">Description:</label>
                <input type="text" id="description" name="description" maxlength="255" value="{{ tool.description }}" required><br><br>
                
                <center>
                <label for="category">Category:</label><br>
                <select id="category" name="category_id" class="full-width" required>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {% if tool.category_id == category.id %}selected{% endif %}>{{ category.category_name }}</option>
                    {% endfor %}
                </select><br><br>
                </center>
                
                <center>
                <label for="site">Site:</label> 
                <select id="site" name="site_id" class="full-width" required>
                    {% for site in sites %}
                        <option value="{{ site.site_id }}" {% if tool.site_id == site.site_id %}selected{% endif %}>{{ site.site_name }}</option>
                    {% endfor %}
                </select><br><br>
                </center>
                
    
            
            <input type="submit" value="Update">
        </form>
        <button type="button" class="btn btn-primary" onclick="window.location.href='admin_dashboard.php'">Go Back</button>
    {% endif %}
</body>
</html>
