<!DOCTYPE html>
<html lang="en">
    {% include 'header.twig' %}
<script>
    function clearSearchAndGoBack() {
        window.location.href = 'admin_dashboard.php?clear_search_cookie=true';
    }

    function searchTools() {
        var search = document.getElementById('search').value;
        var xhr = new XMLHttpRequest();
        xhr.open('GET', 'search_tools.php?search=' + encodeURIComponent(search), true);
        xhr.onreadystatechange = function() {
            if (xhr.readyState == 4 && xhr.status == 200) {
                document.getElementById('toolsTable').innerHTML = xhr.responseText;
            }
        };
        xhr.send();
    }
</script>
<body>
    <form method="GET" action="view_tools.php">
        <input type="text" id="search" name="search" placeholder="Search tools..." value="{{ search }}" onkeyup="searchTools()">
        <input type="number" name="min_price" placeholder="Min Price" value="{{ min_price }}">
        <input type="number" name="max_price" placeholder="Max Price" value="{{ max_price }}">
        <button type="submit">Search</button>
    </form>
    <table id="toolsTable">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Supplier</th>
            <th>Site</th>
            <th>Price</th>
            <th>Date of Purchase</th>
            <th>Quantity</th>
            <th>Image</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        {% for tool in tools %}
            <tr>
                <td>{{ tool.name }}</td>
                <td>{{ tool.category_name }}</td>
                <td>{{ tool.supp_name }}</td>
                <td>{{ tool.site_name }}</td>
                <td>&euro;{{ tool.price }}</td>
                <td>{{ tool.dop }}</td>
                <td>{{ tool.quantity }}</td>
                <td><img src="{{ tool.image }}" width="100"></td>
                <td>{{ tool.description }}</td>
                <td>
                    <form action="edit_tool.php" method="get" style="display:inline;">
                        <input type="hidden" name="id" value="{{ tool.id }}">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                    <form action="delete_tool.php" method="get" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this tool?');">
                        <input type="hidden" name="id" value="{{ tool.id }}">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>                    
                </td>
            </tr>
        {% else %}
            <tr><td colspan="10">Data not found</td></tr>
        {% endfor %}
    </table>
    <center>
        <div class="body">
            Total Records: {{ total_records }}<br>
            Total Pages: {{ total_pages }}<br>
            {% if page >= 2 %}
                <a class="active" href="view_tools.php?page={{ page - 1 }}&search={{ search }}&min_price={{ min_price }}&max_price={{ max_price }}">Prev</a>
            {% endif %}
            {% for i in 1..total_pages %}
                {% if i == page %}
                    <a class="active" href="view_tools.php?page={{ i }}&search={{ search }}&min_price={{ min_price }}&max_price={{ max_price }}">{{ i }}</a>
                {% else %}
                    <a class="active" href="view_tools.php?page={{ i }}&search={{ search }}&min_price={{ min_price }}&max_price={{ max_price }}">{{ i }}</a>
                {% endif %}
            {% endfor %}
            {% if page < total_pages %}
                <a class="active" href="view_tools.php?page={{ page + 1 }}&search={{ search }}&min_price={{ min_price }}&max_price={{ max_price }}">Next</a>
            {% endif %}
        </div>
        <br><br>
        <button type="button" class="btn btn-primary" onclick="clearSearchAndGoBack()">Go Back</button>
    </center>
</body>
</html>
